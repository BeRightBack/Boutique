<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"] | aspCart</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    
        <!-- css -->
        <link href="~/Catalog/dist/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Catalog/dist/font-awesome/css/font-awesome.css" rel="stylesheet" />
        <link href="~/Catalog/dist/morris/morris.css" rel="stylesheet" />
        <link href="~/Catalog/dist/adminlte/css/AdminLTE.min.css" rel="stylesheet" />
        <link href="~/Catalog/dist/adminlte/css/skins/skin-blue.min.css" rel="stylesheet" />
        <link href="~/Catalog/dist/Icheck/skins/square/blue.css" rel="stylesheet" />
        <link href="~/Catalog/dist/DataTables/css/dataTables.bootstrap.css" rel="stylesheet" />
        <link href="~/Catalog/dist/kendoui.2017.1.118.core/styles/kendo.common-bootstrap.min.css" rel="stylesheet" />
        <link href="~/Catalog/dist/kendoui.2017.1.118.core/styles/kendo.bootstrap.min.css" rel="stylesheet" />
        <link href="~/Catalog/css/admin.css" rel="stylesheet" />
        <link href="~/Catalog/css/site.css" rel="stylesheet" />

        <!-- js -->
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/Catalog/dist/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/Catalog/dist/bootstrap/js/tether.min.js"></script>
        <script src="~/Catalog/dist/adminlte/js/app.js"></script>
        <script src="~/Catalog/dist/Icheck/icheck.js"></script>
        <script src="~/Catalog/dist/DataTables/js/jquery.dataTables.js"></script>
        <script src="~/Catalog/dist/DataTables/js/dataTables.bootstrap.js"></script>
        <script src="~/Catalog/dist/kendoui.2017.1.118.core/js/kendo.ui.core.min.js"></script>
        <script src="~/Catalog/dist/ckeditor/ckeditor.js"></script>
        <script src="~/Catalog/dist/raphael/raphael.min.js"></script>
        <script src="~/Catalog/dist/morris/morris.min.js"></script>
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
   

</head>
<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <!-- Main Header -->
        @await Html.PartialAsync("_TopMenu")
        <!-- Left side column. contains the logo and sidebar -->
        @await Html.PartialAsync("_LeftMenu")
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    @ViewData["ContentHeader"]
                    <small>@await RenderSectionAsync("headerLeftOptional", required: false)</small>
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
                    <li class="active">Here</li>
                </ol>
            </section>
            <section class="content-header clearfix">
                <div class="pull-left">
                    @await RenderSectionAsync("actionHeader", required: false)
                </div>
            </section>
            <!-- Main content -->
            <section class="content">
                <!-- Your Page Content Here -->
                @RenderBody()
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        @await Html.PartialAsync("_Footer")
    </div>
    <!-- ./wrapper -->

    @RenderSection("menu", required: false)
    @RenderSection("scripts", required: false)
</body>
</html>
