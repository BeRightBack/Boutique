@model Todo
@{
    ViewData["Title"] = "Create";
}

<h3>Create a new Task</h3>

<div asp-validation-summary="All" class="text-danger">
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="CategoryId" class="form-label">@Localize("Category")</label>
            <select asp-for="CategoryId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Categories, "Id", "Name"))">
                <option value="">-- Select a Category --</option>
            </select>
        </div>
        <div class="mb-3">
            <label asp-for="DueDate" class="form-label"></label>
            <input asp-for="DueDate" class="form-control" />
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="StatusId" class="form-label">Status</label>
            <select asp-for="StatusId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Statuses, "Id", "Name"))">
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>