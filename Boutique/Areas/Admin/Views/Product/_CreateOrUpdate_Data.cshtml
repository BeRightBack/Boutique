@model ProductCreateOrUpdateModel

<div class="form-horizontal">
    <div class="form-group">
        <label asp-for="CostPrice" class="control-label"></label>
        <input asp-for="CostPrice" class="form-control" />
        <span asp-validation-for="CostPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RetailPrice" class="control-label"></label>
        <input asp-for="RetailPrice" class="form-control" />
        <span asp-validation-for="RetailPrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpecialPrice" class="control-label"></label>
        <input asp-for="SpecialPrice" class="form-control" />
        <span asp-validation-for="SpecialPrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SpecialPriceStartDate" class="control-label"></label>
        <input asp-for="SpecialPriceStartDate" class="form-control" />
        <span asp-validation-for="SpecialPriceStartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SpecialPriceEndDate" class="control-label"></label>
        <input asp-for="SpecialPriceEndDate" class="form-control" />
        <span asp-validation-for="SpecialPriceEndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StockQuantity" class="control-label"></label>
        <input asp-for="StockQuantity" class="form-control" />
        <span asp-validation-for="StockQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MinimumStockQuantity" class="control-label"></label>
        <input asp-for="MinimumStockQuantity" class="form-control" />
        <span asp-validation-for="MinimumStockQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="NotifyForQuantityBelow" class="control-label"></label>
        <input asp-for="NotifyForQuantityBelow" class="form-control" />
        <span asp-validation-for="NotifyForQuantityBelow" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MinimumCartQuantity" class="control-label"></label>
        <input asp-for="MinimumCartQuantity" class="form-control" />
        <span asp-validation-for="MinimumCartQuantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MaximumCartQuantity" class="control-label"></label>
        <input asp-for="MaximumCartQuantity" class="form-control" />
        <span asp-validation-for="MaximumCartQuantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DateAdded" class="control-label"></label>
        <input asp-for="DateAdded" class="form-control" />
        <span asp-validation-for="DateAdded" class="text-danger"></span>
    </div>



    <div class="form-group">
        <label asp-for="CategoryIds">@Model.CategoryIds[0].</label>
        <select name="CategoryIds" class="form-control" id="single-select-field">
            <option value="@Model.CategoryIds.First()"></option>
            @foreach (var item in Model.CategorySelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="CategoryIds" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ManufacturerIds"></label>
        <select asp-items="Model.ManufacturerSelectList" name="ManufacturerIds" class="form-control form-select" id="single-select-field" data-placeholder="Choose one thing">
            <option selected></option>
            
        </select>
        <span asp-validation-for="ManufacturerIds" class="text-danger"></span>
    </div>
    
</div> <!-- form horizontal end -->
@section scripts {
    <script>
        
        $('#single-select-clear-field').select2({
            theme: "bootstrap-5",
            width: $(this).data('width') ? $(this).data('width') : $(this).hasClass('w-100') ? '100%' : 'style',
            placeholder: $(this).data('placeholder'),
            allowClear: true
        });
    </script>

}
