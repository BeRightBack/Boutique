@model CategoryCreateOrUpdateModel

<h2>Create Category</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <p>
        <a class="btn btn-primary" data-bs-toggle="collapse" data-bs-target="#collapseExample" role="button"
           aria-expanded="false" aria-controls="collapseExample">
            Edit Description
        </a>
    </p>
    <div class="collapse" id="collapseExample">
        <div class="form-group card card-body">
            <label asp-for="Description" class="control-label"></label>
            <textarea id="tiny" asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ParentCategoryId"></label>
        <select asp-for="ParentCategoryId" asp-items="Model.ParentCategorySelectList" class="form-control">
            <option value="">Select a parent category</option>
        </select>
        <span asp-validation-for="ParentCategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SeoUrl"></label>
        <input asp-for="SeoUrl" class="form-control" />
        <span asp-validation-for="SeoUrl" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MetaTitle"></label>
        <input asp-for="MetaTitle" class="form-control" />
        <span asp-validation-for="MetaTitle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MetaDescription"></label>
        <textarea asp-for="MetaDescription" class="form-control"></textarea>
        <span asp-validation-for="MetaDescription" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MetaKeywords"></label>
        <textarea asp-for="MetaKeywords" class="form-control"></textarea>
        <span asp-validation-for="MetaKeywords" class="text-danger"></span>
    </div>

    <div class="form-group">
        <div class="checkbox">
            <label>
                <input asp-for="Published" />
                @Html.DisplayNameFor(model => model.Published)
            </label>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>

        <a asp-action="List" class="btn btn-default">Cancel</a>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

